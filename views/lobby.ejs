<div class="row text-center">
  <% include error.ejs %>
</div>

<div class="row">
  <!-- Test tables -->
  <div class="col">
    <div>
      <div class="lobby">
        <h3>Current Games</h3>
        <div class="table-responsive">
          <table style="width:100%">
            <% if( typeof games != "undefined") { %>
              <tr>
                <th>Owner</th>
                <th>Game Name</th>
                <th>Total Players</th>
              </tr>
              <% games.forEach(( game ) => { %>
                <tr><!-- This needs to be fixed -->
                  <td><%= game.name %> </td>
                  <td><%= game.name %></td>
                  <td><%= game.number_of_players %></td>
                  <td><a href="/game/<%= game.id %>" class="btn btn-md btn-success btn-block" role="button">Join</a></td>
                  <td><a href="/game/<%= game.id %>" class="btn btn-md btn-warning btn-block" role="button">Spectate</button></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr><h3>No Current Games.</h3></tr>
              <tr><h3>Please create a game to play.</h3></tr>
            <% } %>
          </table>
        </div>


        <h3>Scores</h3>

        <div class="table-responsive">
          <table style="width:100%">
            <tr>
              <th>Name</th>
              <th>Score</th>
            </tr>
            <% var namesInGame = ["Jon", "Robert", "CZAR","Jon", "Robert", "CZAR","Jon", "Robert", "CZAR","Jon", "Robert", "CZAR"]%>
            <% var scores = ["100","36","6969","100","36","6969","100","36","6969","100","36","6969"]%>
                <% for(var i=0; i<namesInGame.length; i++) {%>
                  <tr>
                    <td>
                      <%= namesInGame[i] %>
                    </td>
                    <td>
                      <%= scores[i] %>
                    </td>
                  </tr>
                <% } %>
          </table>
        </div>

        <div class="form-signin">
          <a href="/game" class="btn btn-lg btn-success btn-block" role="button">Create Game</a>
        </div>
        
      </div>
    </div>
  </div>
  <!-- chat section -->
  <div class="col">
    <div class="chat">
      <div id="menu">
        <h3>Chat: Welcome, <b><%= username %></b></h3>
        <div style="clear:both">
          <div class="chat-messages">
            <div id="chat-window" class="table-responsive">
              <table id="message-list" style="width:100%"></table>
            </div>
          </div>
          <form id="chat-message-form">
            <input id="message" autocomplete="off" />
            <button id="chat-submit-button" class="btn btn-info">Send</button>
          </form>

          <script src="/socket.io/socket.io.js"></script>
          <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
          <script src="../scripts/lobby.js"></script>
        </div>
      </div>
    </div>
  </div>
</div>